<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:text="Details..."
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textDetails"
        android:layout_below="@+id/btnClear"
        android:layout_alignParentStart="true"
        android:scrollbars="vertical"
        android:maxLines="10"/>

    <TextView
        android:text="Unsorted"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textUnsorted"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Sorted"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textSorted"
        android:layout_below="@+id/textUnsorted" />

    <Button
        android:text="Bubble Sort"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnBubbleSort"
        android:onClick="BubbleSort"
        android:layout_below="@+id/textSorted"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Selection Sort"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSelectionSort"
        android:onClick="SelectionSort"
        android:layout_below="@+id/btnInsertionSort"
        android:layout_alignParentStart="true" />
    <Button
        android:text="Insertion Sort"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnInsertionSort"
        android:onClick="InsertionSort"
        android:layout_below="@+id/btnBubbleSort"
        android:layout_alignParentStart="true" />
    <Button
        android:text ="Clear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnClear"
        android:onClick="Clear"
        android:layout_below="@+id/btnSelectionSort"
        android:layout_alignParentStart="true" />

</RelativeLayout>
